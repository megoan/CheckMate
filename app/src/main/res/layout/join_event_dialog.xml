<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join the Event"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0">

    </View>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="would you like to join: "
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/eventNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join the Event"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="how are you connected? "
            android:padding="10dp"
            />
        <EditText
            android:id="@+id/connectedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Bride's friend..."
            android:textColor="@color/black"
            android:padding="5dp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="please note that you can only join one event. so you will be removed from previous events!"
        android:padding="10dp"
        android:textColor="@color/black"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:padding="5dp">
    <TextView
        android:id="@+id/cancelView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel"
        android:paddingRight="15dp"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:id="@+id/joinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="join"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:textColor="@color/colorAccent"/>

</LinearLayout>

</LinearLayout>